<div class="container skillset-content">
  <div class="columns is-centered">
    <div class="column has-text-centered">
      <div class="box columns">
        {% for role in roles -%}
          <div class="column">
            <strong class="title is-5 has-text-weight-bold">  
              {{ role.name }}
            </strong>

            <p>
              {{ role.description }}
            </p>

            {% if role.languages %}
              <strong class="has-text-weight-semibold has-text-primary margin-10">
                Languages I speak:
              </strong>

              <p>
                {{ role.languages | join(", ") }}
              </p>
            {% endif %}

            {% if role.tools %}
              <strong class="has-text-weight-semibold has-text-primary margin-10">
                Tools I use:
              </strong>
              
              <ul>
                {% for tool in role.tools -%}
                  <li>{{ tool }}</li>
                {%- endfor %}
              </ul>
            {% endif %}

            {% if role.knowledge %}
              <strong class="has-text-weight-semibold has-text-primary margin-10">
                Knowledges and Principles I follow:
              </strong>

              <ul>
                {% for knowledge in role.knowledge -%}
                <li>{{ knowledge }}</li>
                {%- endfor %}
              </ul>
            {% endif %}

          </div>
        {%- endfor %}
